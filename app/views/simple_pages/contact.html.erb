<h1>Contact us</h1>
<%= flash[:notice] %>

<%=form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
    <div class="row">
        <div class="form-group">
            <%=form.label :name %>
            <%=form.text_field :name, class: "form-control",  placeholder: "White Tiger", required: true %>
        </div>
        <div class="form-group">
            <%=form.label :email %>
            <%=form.text_field :email, class: "form-control",  placeholder: "your@email", required: true %>
        </div>
        <div class="form-group">
            <%=form.label :message %>
            <%=form.text_area :message, class: "form-control",  placeholder: "Write your message", rows: 5, required: true %>
        </div>
    </div>
    <%=form.submit "send", class: "form_label"  %>
<%end%>


